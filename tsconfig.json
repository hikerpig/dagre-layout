{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "es6",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "paths": {
      "lib": ["./lib"]
    }
  },
  "include": [
    "lib"
  ]
}
